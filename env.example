# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/recipe_shopping_db
# For development, you can use SQLite:
# DATABASE_URL=sqlite:./dev.db

# OpenAI API for ingredient parsing
OPENAI_API_KEY=your_openai_api_key_here

# Amazon Product Advertising API
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_ASSOCIATE_TAG=your_associate_tag
AMAZON_REGION=us-east-1

# Open Food Facts API (free, no key needed)
OPENFOODFACTS_API_URL=https://world.openfoodfacts.org/api/v0

# OCR Configuration (Tesseract.js)
TESSERACT_LANG=eng

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads 
